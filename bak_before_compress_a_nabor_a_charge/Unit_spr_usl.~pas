    wwNavButton14: TwwNavButton;
    OD_uslm: TOracleDataSet;
    DS_uslm: TDataSource;
    TabSheet3: TTabSheet;
    wwDBGrid2: TwwDBGrid;
    wwDBGrid3: TwwDBGrid;
